<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  tools:context=".controller.ui.SingleHuntFragment"
  android:padding="8dp">

  <TextView
    android:id="@+id/hunt_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="10pt"
    android:gravity="center"
    android:layout_margin="4dp"
    app:layout_constraintTop_toTopOf="parent"/>

  <TextView
    android:id="@+id/organizer_name"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textSize="8pt"
    android:layout_margin="4dp"
    app:layout_constraintTop_toBottomOf="@id/hunt_name"/>

  <TextView
    android:id="@+id/date_created"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:textSize="8pt"
    app:layout_constraintTop_toBottomOf="@id/organizer_name"/>

  <TextView
    android:id="@+id/number_of_clues"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toBottomOf="@id/date_created"/>

  <TextView
    android:id="@+id/hunt_description"
    android:layout_width="match_parent"
    android:layout_height="325dp"
    app:layout_constraintTop_toBottomOf="@id/number_of_clues"/>

  <TextView
    android:id="@+id/hunt_stats_prompt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Hunt Stats"
    android:textSize="8pt"
    app:layout_constraintTop_toBottomOf="@id/hunt_description"
    android:gravity="center"/>

  <TextView
    android:id="@+id/date_started"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintTop_toBottomOf="@id/hunt_stats_prompt"/>

  <TextView
    android:id="@+id/date_completed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintTop_toBottomOf="@id/date_started"/>

  <TextView
    android:id="@+id/total_time"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintTop_toBottomOf="@id/date_completed"/>

  <TextView
    android:id="@+id/clues_completed"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:layout_constraintTop_toBottomOf="@id/total_time"/>

  <Button
    android:id="@+id/leave_hunt_button"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="LEAVE HUNT"
    app:layout_constraintTop_toBottomOf="@id/clues_completed"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>