<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
  </style>

  <style name="HuntList">
    <item name="android:orientation">vertical</item>
    <item name="android:background">@color/HuntListBackground</item>
    <item name="android:padding">@dimen/list_item_spacing</item>
  </style>


  <style name="HuntItem" parent="AppTheme">
    <item name="android:textSize">@dimen/list_item_text_size</item>
    <item name="android:layout_margin">@dimen/list_content_spacing</item>
  </style>


  <style name="HuntItem.Title" parent="HuntItem">
  <item name="android:textSize">@dimen/list_item_title_size</item>
  <item name="android:textStyle">bold</item>
  </style>

  <style name="HuntItem.Description" parent="HuntItem">
    <item name="android:textSize">@dimen/list_item_text_size</item>

  </style>

</resources>
